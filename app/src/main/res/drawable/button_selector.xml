<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"> <!-- presionado -->
        <shape android:shape="rectangle">
            <corners android:radius="6dp" />
            <solid android:color="@color/colorNormal" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
<solid android:angle="0" android:startColor="@color/colorPressed"
        </shape>
    </item><!-- en foco -->
    <item android:drawable="@color/black" tools:ignore="StateListReachable" /> <!-- por defecto -->

</selector>
