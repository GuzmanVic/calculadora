<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado cuando el botón está presionado -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FF5733" /> <!-- Cambia el color a tu elección -->
            <corners android:radius="8dp" /> <!-- Añade esquinas redondeadas si lo deseas -->
        </shape>
    </item>
    <!-- Estado predeterminado (cuando el botón no está presionado) -->
    <item>
        <shape>
            <solid android:color="#33B5E5" /> <!-- Cambia el color a tu elección -->
            <corners android:radius="8dp" /> <!-- Añade esquinas redondeadas si lo deseas -->
        </shape>
    </item>
</selector>
