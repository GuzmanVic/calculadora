<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnDeleteAll"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:backgroundTint="@color/black"
        android:text="@string/c"
        android:textColor="#FF0303"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/btnRaiz"
        app:layout_constraintTop_toBottomOf="@+id/display" />

    <Button
        android:id="@+id/btnExp"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:layout_marginStart="24dp"
        android:backgroundTint="@color/black"
        android:text="@string/power"
        android:textColor="#88E41D"
        android:textColorHighlight="#DADCD9"
        android:textColorHint="#DADCD9"
        android:textColorLink="#DADCD9"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/display" />

    <Button
        android:id="@+id/btnRaiz"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:backgroundTint="#000000"
        android:text="@string/root"
        android:textColor="#88E41D"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/btnExp"
        app:layout_constraintTop_toBottomOf="@+id/display" />

    <Button
        android:id="@+id/btnBorrar"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#000000"
        android:text="@string/backspace"
        android:textAlignment="center"
        android:textColor="#88E41D"
        android:textDirection="locale"
        android:textScaleX="1"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btnDeleteAll"
        app:layout_constraintTop_toBottomOf="@+id/display" />

    <Button
        android:id="@+id/btnparentesisA"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:layout_marginStart="24dp"
        android:backgroundTint="@color/black"
        android:text="@string/parenthesesO"
        android:textColor="#88E41D"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnExp" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:layout_marginStart="24dp"
        android:backgroundTint="@color/black"
        android:text="@string/_7"
        android:textColor="#FFF"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnparentesisA" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:layout_marginStart="24dp"
        android:backgroundTint="@color/black"
        android:text="@string/_1"
        android:textColor="#FFF"
        android:textSize="50sp"
        app:layout_constraintEnd_toStartOf="@+id/btn2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn4" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:backgroundTint="@color/black"
        android:text="@string/_2"
        android:textColor="#FFF"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/btn1"
        app:layout_constraintTop_toBottomOf="@+id/btn5" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:backgroundTint="@color/black"
        android:text="@string/_3"
        android:textColor="#FFF"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/btn2"
        app:layout_constraintTop_toBottomOf="@+id/btn6" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:layout_marginStart="24dp"
        android:backgroundTint="@color/black"
        android:text="@string/_4"
        android:textColor="#FFF"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn7" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:backgroundTint="@color/black"
        android:text="@string/_5"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/btn4"
        app:layout_constraintTop_toBottomOf="@+id/btn8" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:backgroundTint="@color/black"
        android:text="@string/_6"
        android:textColor="#FFF"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/btn5"
        app:layout_constraintTop_toBottomOf="@+id/btn9" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:backgroundTint="@color/black"
        android:text="@string/_9"
        android:textColor="#FFF"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/btn8"
        app:layout_constraintTop_toBottomOf="@+id/btnMod" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:backgroundTint="@color/black"
        android:text="@string/_8"
        android:textColor="#FFF"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/btn7"
        app:layout_constraintTop_toBottomOf="@+id/btnParentesisC" />

    <Button
        android:id="@+id/btnParentesisC"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:backgroundTint="@color/black"
        android:text="@string/parenthesesC"
        android:textColor="#88E41D"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/btnparentesisA"
        app:layout_constraintTop_toBottomOf="@+id/btnRaiz" />

    <Button
        android:id="@+id/btnMod"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:backgroundTint="@color/black"
        android:text="@string/mod"
        android:textColor="#88E41D"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/btnParentesisC"
        app:layout_constraintTop_toBottomOf="@+id/btnDeleteAll" />

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/black"
        android:text="@string/division"
        android:textColor="#88E41D"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btnMod"
        app:layout_constraintTop_toBottomOf="@+id/btnBorrar" />

    <Button
        android:id="@+id/btnSum"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/black"
        android:text="@string/plus"
        android:textColor="#88E41D"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btn9"
        app:layout_constraintTop_toBottomOf="@+id/btnDiv" />

    <Button
        android:id="@+id/btnMul"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/black"
        android:text="@string/multiply"
        android:textColor="#88E41D"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btn9"
        app:layout_constraintTop_toBottomOf="@+id/btnSum" />

    <Button
        android:id="@+id/btnMen"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/black"
        android:text="@string/substract"
        android:textColor="#88E41D"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btn9"
        app:layout_constraintTop_toBottomOf="@+id/btnMul" />

    <Button
        android:id="@+id/btnIgual"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#06870B"
        android:text="@string/equals"
        android:textColor="#Fff"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btn9"
        app:layout_constraintTop_toBottomOf="@+id/btnMen" />

    <Button
        android:id="@+id/btnPunto"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:backgroundTint="@color/black"
        android:text="@string/decimal"
        android:textColor="#FFF"
        android:textSize="50sp"
        app:layout_constraintEnd_toStartOf="@+id/btnIgual"
        app:layout_constraintTop_toBottomOf="@+id/btn3" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:backgroundTint="@color/black"
        android:text="@string/_0"
        android:textColor="#FFF"
        android:textSize="50sp"
        app:layout_constraintEnd_toStartOf="@+id/btnPunto"
        app:layout_constraintTop_toBottomOf="@+id/btn2" />


    <TextView
        android:id="@+id/display"
        android:layout_width="416dp"
        android:layout_height="167dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>