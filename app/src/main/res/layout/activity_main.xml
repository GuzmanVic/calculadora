<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnDeleteAll"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:backgroundTint="@drawable/button_selector"
        android:backgroundTintMode="src_in"
        android:text="C"
        android:textColor="#FF0303"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/btnRaiz"
        app:layout_constraintTop_toBottomOf="@+id/display" />

    <Button
        android:id="@+id/btnExp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:layout_marginStart="24dp"
        android:backgroundTint="@drawable/button_selector"
        android:text="x²"
        android:textColor="#88E41D"
        android:textColorHighlight="#DADCD9"
        android:textColorHint="#DADCD9"
        android:textColorLink="#DADCD9"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/display" />

    <Button
        android:id="@+id/btnRaiz"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:backgroundTint="#000000"
        android:text="²√x"
        android:textColor="#88E41D"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/btnExp"
        app:layout_constraintTop_toBottomOf="@+id/display" />

    <Button
        android:id="@+id/btnBorrar"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#000000"
        android:text="←"
        android:textAlignment="center"
        android:textColor="#88E41D"
        android:textDirection="locale"
        android:textScaleX="1"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btnDeleteAll"
        app:layout_constraintTop_toBottomOf="@+id/display" />

    <Button
        android:id="@+id/btnparentesisA"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:layout_marginStart="24dp"
        android:backgroundTint="@drawable/button_selector"
        android:text="("
        android:textColor="#88E41D"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnExp" />

    <Button
        android:id="@+id/btn7"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:layout_marginStart="24dp"
        android:backgroundTint="@drawable/button_selector"
        android:text="7"
        android:textColor="#FFF"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnparentesisA" />

    <Button
        android:id="@+id/btn1"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:layout_marginStart="24dp"
        android:backgroundTint="@drawable/button_selector"
        android:text="1"
        android:textSize="50sp"
        app:layout_constraintEnd_toStartOf="@+id/btn2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn4" />

    <Button
        android:id="@+id/btn2"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:backgroundTint="@drawable/button_selector"
        android:text="2"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/btn1"
        app:layout_constraintTop_toBottomOf="@+id/btn5" />

    <Button
        android:id="@+id/btn3"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:backgroundTint="@drawable/button_selector"
        android:text="3"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/btn2"
        app:layout_constraintTop_toBottomOf="@+id/btn6" />

    <Button
        android:id="@+id/btn4"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:layout_marginStart="24dp"
        android:backgroundTint="@drawable/button_selector"
        android:text="4"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn7" />

    <Button
        android:id="@+id/btn5"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:backgroundTint="@drawable/button_selector"
        android:text="5"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/btn4"
        app:layout_constraintTop_toBottomOf="@+id/btn8" />

    <Button
        android:id="@+id/btn6"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:backgroundTint="@drawable/button_selector"
        android:text="6"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/btn5"
        app:layout_constraintTop_toBottomOf="@+id/btn9" />

    <Button
        android:id="@+id/btn9"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:backgroundTint="@drawable/button_selector"
        android:text="9"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/btn8"
        app:layout_constraintTop_toBottomOf="@+id/btnMod" />

    <Button
        android:id="@+id/btn8"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:backgroundTint="@drawable/button_selector"
        android:text="8"
        android:textColor="#FFF"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/btn7"
        app:layout_constraintTop_toBottomOf="@+id/btnParentesisC" />

    <Button
        android:id="@+id/btnParentesisC"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:backgroundTint="@drawable/button_selector"
        android:text=")"
        android:textColor="#88E41D"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/btnparentesisA"
        app:layout_constraintTop_toBottomOf="@+id/btnRaiz" />

    <Button
        android:id="@+id/btnMod"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:backgroundTint="@drawable/button_selector"
        android:text="MOD"
        android:textColor="#88E41D"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/btnParentesisC"
        app:layout_constraintTop_toBottomOf="@+id/btnDeleteAll" />

    <Button
        android:id="@+id/btnDiv"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@drawable/button_selector"
        android:text="÷"
        android:textColor="#88E41D"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btnMod"
        app:layout_constraintTop_toBottomOf="@+id/btnBorrar" />

    <Button
        android:id="@+id/btnSum"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@drawable/button_selector"
        android:text="+"
        android:textColor="#88E41D"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btn9"
        app:layout_constraintTop_toBottomOf="@+id/btnDiv" />

    <Button
        android:id="@+id/btnMul"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@drawable/button_selector"
        android:text="*"
        android:textColor="#88E41D"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btn9"
        app:layout_constraintTop_toBottomOf="@+id/btnSum" />

    <Button
        android:id="@+id/btnMen"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@drawable/button_selector"
        android:text="-"
        android:textColor="#88E41D"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btn9"
        app:layout_constraintTop_toBottomOf="@+id/btnMul" />

    <Button
        android:id="@+id/btnIgual"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@drawable/equals_selector"
        android:text="="
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btn9"
        app:layout_constraintTop_toBottomOf="@+id/btnMen" />

    <Button
        android:id="@+id/btnPunto"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:backgroundTint="@drawable/button_selector"
        android:text="."
        android:textSize="50sp"
        app:layout_constraintEnd_toStartOf="@+id/btnIgual"
        app:layout_constraintTop_toBottomOf="@+id/btn3" />

    <Button
        android:id="@+id/btn0"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:backgroundTint="@drawable/button_selector"
        android:text="0"
        android:textSize="50sp"
        app:layout_constraintEnd_toStartOf="@+id/btnPunto"
        app:layout_constraintTop_toBottomOf="@+id/btn2" />


    <TextView
        android:id="@+id/display"
        android:layout_width="403dp"
        android:layout_height="172dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>